generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Вправа
model Exercise {
  id          Int               @id @default(autoincrement())
  title       String            @unique
  description String
  images      String
  video       String?
  muscles     ExerciseMuscle[]
  routines    RoutineExercise[]
  createdAt   DateTime          @default(now())
}

//Зв'язок Вправа-М'язи
model ExerciseMuscle {
  id         Int        @id @default(autoincrement())
  exerciseId Int
  muscleId   Int
  exercise   Exercise   @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  muscle     MuscleList @relation(fields: [muscleId], references: [id])
}

model Routine {
  id          Int               @id @default(autoincrement())
  title       String            @unique
  description String?
  exercises   RoutineExercise[]
  createdAt   DateTime          @default(now())
}

model RoutineExercise {
  id         Int  @id @default(autoincrement())
  routineId  Int
  exerciseId Int
  order      Int // порядок виконання вправи в рутині
  reps       Int? // кількість повторів, якщо це reps
  sets       Int? // кількість сетів
  duration   Int? // час у секундах, якщо це time-based
  rest       Int? // перерва після вправи у секундах

  routine  Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id])
}

model RoutineStatistics {
  id           Int      @id @default(autoincrement())
  workoutTitle String
  workoutTime  Int
  endTime      DateTime
  muscles      String
}

//Список всіх м'язів

model MuscleList {
  id            Int              @id @default(autoincrement())
  nameEn        String           @unique
  nameUa        String           @unique
  description   String
  exercises     ExerciseMuscle[]
  // muscleListGroup MuscleListGroup[]
  muscleToGroup MuscleToGroup[]
}

//Групи м'язів
model MuscleListGroup {
  id            Int             @id @default(autoincrement())
  nameEn        String          @unique
  nameUa        String          @unique
  description   String
  // muscleList    MuscleList[]
  muscleToGroup MuscleToGroup[]
}

//Зв'язок між М'язи-група

model MuscleToGroup {
  id            Int             @id @default(autoincrement())
  muscleId      Int
  muscleGroupId Int
  muscle        MuscleList      @relation(fields: [muscleId], references: [id])
  muscleGroup   MuscleListGroup @relation(fields: [muscleGroupId], references: [id])

  @@unique([muscleId, muscleGroupId])
}
